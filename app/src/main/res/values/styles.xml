<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreenTheme" parent="Theme.Grisaceo">
<!--        <item name="android:windowBackground">@drawable/splash_screen</item>-->
    </style>

    <style name="SmallTextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallTextView_Bold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextView_Bold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextView_Bold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="slide_up_down_dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bg_navigation_selector</item>
    </style>

</resources>